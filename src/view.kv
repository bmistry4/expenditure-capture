#:kivy 1.1.0
#:import Factory kivy.factory.Factory

#:set color_button (0.784, 0.443, 0.216, 1)  # brown
#:set color_button_pressed (0.659, 0.522, 0.431, 1)  # darker brown
#:set color_font   (0.957, 0.890, 0.843, 1)  # off white

<MySpinnerOption@SpinnerOption>:
    background_color: color_button if self.state == 'down' else color_button_pressed
    background_down: 'atlas://data/images/defaulttheme/button'
    color: color_font

<RecycleViewRow>:
    orientation: 'horizontal'
    padding:5
    Label:
        text: root.text
    Spinner:
        text: 'Please select...'
        values: 'cash', 'food/ house', 'takeout', 'social', 'birthdays/ occasions', 'other', 'education', 'travel', 'sport',
        background_color: color_button if self.state == 'normal' else color_button_pressed
        background_down: 'atlas://data/images/defaulttheme/spinner'
        color: color_font
        option_cls: Factory.get("MySpinnerOption")

<TransactionsTable>:
    viewclass: 'RecycleViewRow'
    RecycleBoxLayout:
        default_size: None, dp(56)
        default_size_hint: 1, None
        size_hint_y: None
        height: self.minimum_height
        orientation: 'vertical'

<LoadDialog>:
    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: "vertical"
        FileChooserListView:
            id: filechooser

        BoxLayout:
            size_hint_y: None
            height: 30
            Button:
                text: "Cancel"
                on_release: root.cancel()

            Button:
                text: "Load"
                on_release: root.load(filechooser.path, filechooser.selection)

<Root>: # no <> means it's been instantiated
    transactions_filepath: transactions_filepath
    BoxLayout:
        orientation: 'vertical'
        padding: 10
        BoxLayout:
            spacing: 5
            padding:5
            size_hint: 1.,.2
            orientation: 'horizontal'
            TextInput:
                id: transactions_filepath
                text:'file'
            Button:
                text: 'Browse...'
                on_release: root.show_load()

        TextInput:
            text: 'search...'
            size_hint: 0.95,0.1
#        TransactionsTable:
        Button:
            size_hint_y: 0.2
            text: 'DO THE THING'
